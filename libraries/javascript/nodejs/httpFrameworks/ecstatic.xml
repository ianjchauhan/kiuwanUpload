<?xml version="1.0" encoding="UTF-8"?>
<library xmlns="http://www.optimyth.com/schema/definitions/library_metadata"
         technology="javascript" name="nodejs/ecstatic" standard="nodejs">

  <module name="nodejs/ecstatic" standard="node-ecstatic">
    <description url="https://www.npmjs.com/package/ecstatic">Static file server middleware under Node.js</description>

    <class name="nodejs/ecstatic">
      <function name="#module#">
        <sink kind="path_traversal" resource="filesystem">
          <arg pos="0" field="root"/>
        </sink>
        <sink kind="open_redirect" resource="web">
          <arg pos="0" field="baseDir"/>
        </sink>
      </function>
    </class>
  </module>
</library>